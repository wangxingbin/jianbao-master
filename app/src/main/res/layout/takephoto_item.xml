<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="50dp"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/takephoto_photo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@mipmap/zzq_xj1" />
        <View
            android:layout_width="2dp"
            android:layout_height="55dp"
            android:background="#000000"/>

        <ImageView
            android:id="@+id/takephoto_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/zzq_xc1"
            android:textSize="20sp" />

    </LinearLayout>


    <Button
        android:id="@+id/takephtot_jump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_back_land"
        android:gravity="center"
        android:textColor="#fff"
        android:text="上传照片" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line1"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_xx1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/takephoto_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/publish_phtot_rim" />

            <ImageView
                android:id="@+id/im_x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xxh" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_xx2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/takephoto_picture2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/publish_phtot_rim" />

            <ImageView
                android:id="@+id/im_x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xxh" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_xx3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/takephoto_picture3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/publish_phtot_rim" />

            <ImageView
                android:id="@+id/im_x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xxh" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_xx4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/takephoto_picture4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/publish_phtot_rim" />

            <ImageView
                android:id="@+id/im_x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xxh" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_xx5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/takephoto_picture5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/publish_phtot_rim" />

            <ImageView
                android:id="@+id/im_x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xxh" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
